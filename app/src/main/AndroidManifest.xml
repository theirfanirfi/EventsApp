<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="theirfanullah.com.eventsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddEvent"
            android:label="Add Event"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".EditEvent"
            android:label="Add Event"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".AddNote"
            android:label="Add Note"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".EditNote"
            android:label="Edit Note"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".SingleEvent"
            android:label="@string/title_activity_single_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Search" />
        <activity
            android:name=".SingleNote"
            android:label="@string/title_activity_single_note"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="theirfanullah.com.eventsapp.SingleEvent" />
        </activity>
    </application>

</manifest>